              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "60d5ec49f68a4b8b8c1b5c8e"
                    },
                    "title": {
                      "type": "string",
                      "example": "My New Board"
                    },
                    "background": {
